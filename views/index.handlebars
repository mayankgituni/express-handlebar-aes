    <div class="submitted-container">
      <body>
        <script src="index.js"> </script>
        <div><h1> <u>AES Cryptosystem </u> </h1></div>
        <br/>
        <div> 
            <div>
                <h3> AES Encryption </h3>
                <form action="/encrypt" method="POST">
                    <input type="text" id="ptext" name="ptext" placeholder="Please enter string"><br>
                    <input type="text" id="enkey" name="enkey" placeholder="Please enter hexadecimal"><br>
                    <input type="submit" value="Encrypt"><br>
                </form>
                <div>
                  <label> Plaintext: {{ptext}} </label><br>
                  <label>Key: {{enkey}} </label><br>
                  <label>Encrypted result: {{ciphertext}} </label><br>
                </div>
                <hr/>
                <br>
            </div>
            <div>
                <h3> AES Decryption </h3>
                <form>
                    <label>Cipher text:{{ctext}} </label>
                    <input type="text" id="ctext" name="ctext" placeholder="Please enter encrypted result"><br>
                    <label>Key: {{dekey}}</label>
                    <input type="text" id="dekey" name="dekey" placeholder="Please enter hexadecimal"><br>
                    <input type="submit" value="Decrypt" onclick="decrypt(); return false;"><br>
                </form> 
                Decrypted Result: <div id="decrypted_result"/></div>
            </div>            
        </div>
